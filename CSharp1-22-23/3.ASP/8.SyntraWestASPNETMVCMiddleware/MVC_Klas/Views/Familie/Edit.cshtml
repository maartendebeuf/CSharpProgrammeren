@model MVC_Klas.Models.Familie

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Familie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>@*Validatie check op bovenaan*@
            <div class="form-group">
                <label asp-for="Naam" class="control-label"></label>
                <input asp-for="Naam" class="form-control" />
                <span asp-validation-for="Naam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orde" class="control-label"></label>
                @*<input asp-for="Orde" class="form-control" />*@
                <select asp-for="OrdeID" class="form-control" asp-items="@ViewBag.Ordes"></select>@*viewbag toe te voegen in Edit method*@
                <span asp-validation-for="Orde" class="text-danger"></span>@*Validatie check op lijn*@
            </div>
            <div class="form-group">
                <label asp-for="Klasse" class="control-label"></label>
                @*<input asp-for="Klasse" class="form-control" />*@
                <select asp-for="KlasseID" class="form-control" asp-items="@ViewBag.Klasses"></select>
                <span asp-validation-for="Klasse" class="text-danger"></span>
            </div>
            @Html.HiddenFor(e => e.FamilieScore)
            @*<input asp-for="FamilieScore" class="form-control" type="hidden" />*@

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");@*Validatie check, als deze weg is gebeurt de check niet. Check moet ook og eens gebeuren in Edit*@
    }
}
